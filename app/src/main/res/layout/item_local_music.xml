<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear"
    >
<ImageView
    android:layout_marginLeft="@dimen/dp15"
    android:id="@+id/img_music_item"
    android:layout_width="@dimen/dp80"
    android:layout_height="@dimen/dp80"
    android:src="@drawable/music_icon"
    />
    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@id/img_music_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:id="@+id/tv_song_item"
        />
    <TextView
        android:layout_marginLeft="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_author_item"
        android:layout_below="@id/tv_song_item"
        android:layout_toRightOf="@id/img_music_item"
        />
    <ImageView
        android:layout_marginRight="@dimen/dp20"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/more_music"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp50"
        android:src="@drawable/ic_music_list_icon_more"
        />
    <View
        android:layout_below="@id/img_music_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/black"
        android:layout_marginLeft="@dimen/dp100"
        />

</RelativeLayout>