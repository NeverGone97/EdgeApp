<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp138"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    >



    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/img_add_app"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="@dimen/dp70"
        android:layout_height="@dimen/dp70"
        android:src="@drawable/plus_btn"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        />

        <ImageView

        android:id="@+id/img_icon_app"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:layout_centerInParent="true" />
    <ImageView
        android:id="@+id/img_delete_app"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp15"
        android:src="@drawable/weather_delete_btn"
        android:layout_toRightOf="@+id/img_add_app" />
    <TextView
        android:id="@+id/tv_name_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_add_app"
        android:text="aaa"

        android:textAllCaps="false"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
