<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp230"
    android:layout_height="@dimen/dp280"
    android:paddingLeft="@dimen/dp5"
    android:paddingBottom="@dimen/dp10"
    android:layout_marginBottom="@dimen/dp10"
    >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_ring"
        android:layout_width="@dimen/dp230"
        android:layout_height="@dimen/dp250"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/img_play_ring"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_play" />

    <ImageView
        android:id="@+id/img_pause_ring"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        android:src="@drawable/ic_play_btn_pause" />
    <ImageView
        android:id="@+id/img_down_ring"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_alignBottom="@+id/img_ring"
        android:layout_alignParentStart="true"
        android:src="@drawable/download_little"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/img_set_ring"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_alignBottom="@+id/img_ring"
        android:layout_alignParentEnd="true"
        android:src="@drawable/success"
        android:tint="@color/white"
        android:layout_alignParentRight="true" />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_ring"
        />
</RelativeLayout>
</android.support.v7.widget.CardView>