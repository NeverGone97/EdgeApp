<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="SwitchCompatStyle">
        <item name="colorControlActivated">@color/pure_blue</item>
        <item name="thumbTint">@color/switch_color_thumb</item>
        <item name="trackTint">@color/switch_color</item>
    </style>
    <style name="colorBlue">
        <item name="android:textColor">@color/bluelight</item>
        <item name="android:textSize">@dimen/dp20</item>
    </style>
    <style name="colorBlue20">
         <item name="android:layout_marginLeft">@dimen/dp20</item>
        <item name="android:textColor">@color/green2</item>
        <item name="android:textSize">12sp</item>
    </style>
    colorBlue20
    <color name="pure_blue">#5eedff</color>
    <color name="bluelight">#12abc8</color>
    <color name="graydetail">#fefefe</color>

    <style name="category_item">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/dp15</item>
        <item name="android:layout_marginBottom">@dimen/dp5</item>
        <item name="android:layout_marginLeft">@dimen/dp10</item>
    </style>
    <style name="buton_bg">
        <item name="android:layout_marginLeft">@dimen/dp30</item>
        <item name="android:layout_marginRight">@dimen/dp30</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="buton_bg_no_margin">
        <item name="android:layout_marginTop">@dimen/dp5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="lineView">
        <item name="android:layout_marginRight">@dimen/dp20</item>
        <item name="android:layout_marginLeft">@dimen/dp20</item>
    </style>
    <style name="cardviewCustom">
        <item name="android:layout_marginLeft">@dimen/dp10</item>
        <item name="android:layout_marginRight">@dimen/dp10</item>
    </style>
    <style name="marginIcon">
        <item name="android:layout_marginRight">@dimen/dp40</item>
    </style>
    <style name="radio_group_small">
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:layout_marginRight">@dimen/dp15</item>
    </style>
    <style name="customToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="textLeftDetail">
        <item name="android:textColor">@color/graydetail</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textRightDetail">
        <item name="android:textColor">@color/graydetail</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
